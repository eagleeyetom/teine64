<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Teine64</AssemblyName>
    <RootNamespace>Teine64</RootNamespace>
    <PublishAot>true</PublishAot>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishSingleFile>false</PublishSingleFile>
    <StripSymbols>true</StripSymbols>
    <InvariantGlobalization>true</InvariantGlobalization>
    <Optimize>true</Optimize>
    <DebuggerSupport>false</DebuggerSupport>
    <EnableUnsafeBinaryFormatterSerialization>false</EnableUnsafeBinaryFormatterSerialization>
    <IlcOptimizationPreference>Size</IlcOptimizationPreference>
    <!-- Additional size-focused NativeAOT tweaks -->
    <IlcDisableExceptionMessages>true</IlcDisableExceptionMessages>
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>
    <IlcDisableReflection>false</IlcDisableReflection> <!-- keep reflection metadata minimal; set true only if absolutely sure no reflection usage -->
    <EventSourceSupport>false</EventSourceSupport>
    <!-- Avoid generating full generic sharing data beyond what is used -->
    <IlcTrimMetadata>true</IlcTrimMetadata>
    <EnableDefaultItems>false</EnableDefaultItems>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ApplicationIcon>Resources\teine64.ico</ApplicationIcon>
    <Version>0.2.0</Version>
    <FileVersion>0.2.0.0</FileVersion>
    <AssemblyVersion>0.2.0.0</AssemblyVersion>
    <InformationalVersion>0.2.0</InformationalVersion>
  </PropertyGroup>
  <!-- If building under GitHub Actions, append commit SHA to InformationalVersion -->
  <PropertyGroup Condition="'$(GITHUB_SHA)' != ''">
    <InformationalVersion>0.2.0+$(GITHUB_SHA)</InformationalVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Program.cs" />
    <None Include="Resources\teine64.ico" Condition="Exists('Resources\\teine64.ico')" />
  </ItemGroup>

  <!-- Simple generation of icon via base64 if missing (no CodeTaskFactory needed) -->
  <Target Name="EnsureTeineIcon" BeforeTargets="PrepareForBuild">
    <MakeDir Directories="Resources" Condition="!Exists('Resources')" />
    <Exec Command="dotnet run --project ..\IconGen\IconGen.csproj -- Resources\teine64.ico" />
  </Target>
</Project>